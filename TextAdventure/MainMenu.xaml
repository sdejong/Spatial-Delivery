<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextAdventure.MainMenu"
             NavigationPage.HasBackButton="False"
             BackgroundColor="#bbbbbb">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="125">
        
      <Label Text="Spatial Delivery" HorizontalTextAlignment="Center" Style="{StaticResource LabelStyle}" FontSize="34" />
     
      <Button x:Name="StartGameButton" Text="Start Game" Clicked="StartGameButton_OnClicked" VerticalOptions="Center" Style="{StaticResource ButtonStyle}"/>
      <Button x:Name="CreditsButton" Text="Credits" Clicked="CreditsButton_OnClicked" VerticalOptions="Center" Style="{StaticResource ButtonStyle}"/>
    </StackLayout>
        
  </ContentPage.Content>
</ContentPage>